<div class="show-container" style= "width:50%; margin: 20px auto">
  <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">顧客新規登録</h4>

<%= form_with model: resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


<div class="field">
  <%= f.label :lastName, "名" %>
  <%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
  <%= f.label :first_name, "姓"%>
  <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
</div>

<div class="form-group">
  <label>セイ</label>
  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  <label>メイ</label>
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
</div>

<div class="form-group">
  <label>メールアドレス</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="form-group">
  <label>郵便番号（ハイフンなし）</label>
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
</div>

<div class="form-group">
  <label >住所</label>
  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
</div>

<div class="form-group">
  <label>電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, autocomplete: "phone" %>
</div>

<div class="form-group">
  <label>パスワード</label>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> 文字以上)</em>
  <% end %>
  <%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div class="form-group">
  <label>パスワード（確認用）</label>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= link_to new_customer_session_path do %>
<p>ログインはこちら</p>
<% end %>