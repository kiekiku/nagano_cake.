<div class="edit-container" style="width:50%; margin: 20px auto; position: relative;">
  <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">ユーザー情報編集</h4>
<%= form_with model: @customer, url:customer_path(@customer), method: :patch do |f| %>
       <%= link_to customers_unsubscribe_path(@customer) do %>
              <span class="btn btn-danger" style="position: absolute; top: 30px; right: 50px;">退会する</span>
       <% end %>
    <div class="row" style="height: 20px;"></div>

<div class="form-group">
    <label>姓</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", style: "margin;"  %>
    <label>名</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="form-group">
    <label>セイ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <label>メイ</label>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

   <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", style: "width: 80%;" %>
  </div>

  <div class="form-group">
    <label>電話番号</label>
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <hr>
  <div style="text-align:center;">
    <%= f.submit "変更を保存する", class:"btn btn-success", style: "display:inline-block" %>
  </div>

  <%= link_to customer_path(@customer) do %>
      <span class="glyphicon glyphicon-chevron-left">マイページ</span>
  <% end %>
<% end %>
</div>