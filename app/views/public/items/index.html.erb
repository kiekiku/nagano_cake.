<div class="box" style="margin: 0 auto; text-align: center;">

		<ul><%=link_to '商品一覧', items_path %></ul>
		<ul><%=link_to '会員一覧', admin_customers_path %></ul>
		<ul><%=link_to '注文履歴一覧', admin_root_path %></ul>
		<ul><%=link_to 'ジャンル一覧', admin_genres_path %></ul>
		<ul><%=link_to 'ログアウト', destroy_admin_session_path, method: :delete %></ul>

</div>
<style>
.each_item {
	padding: 0px 5px;
	height: 250px;
	margin-top: 15px;
	overflow-y: scroll;
}

.eyecatch {
	width: 100%;
	height: 600px;
	background-position: center;
	background-size: cover;
}

</style>


		<h1>商品一覧</h1>

   		 <div class="row">
			<% @items.each do |item| %>
					<div class="col-xs-3 each_item">
						<%= link_to item_path(item) do %>
						 <% if item.image.attached? %>
						  <%= image_tag item.image,size:"50x50" %>
						 <% else %>
						  <%= image_tag 'no_image', size: "50x50" %>
						 <% end %>
						<% end %>
						<%= item.name %>
						<%= item.price %>円<br>
						<%= item.introduction%>
					</div>
			<% end %>
		</div>
	</div>
