<div class="container" style= "width:50%; margin: 20px auto;">
  <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">ログイン</h4>

<%= form_with model: resource, as: resource_name, url: session_path(resource_name) do |f| %>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label>パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>


    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-success", style:"display:block; margin: 0 auto;" %>
    </div>

<% end %>


<%= link_to new_customer_registration_path do %>
<p>新規登録はこちら</p>
<% end %>