<div class="box" style="margin: 0 auto; text-align: center;">
	<ul>
		<li><%=link_to '商品一覧', admin_items_path %></li>
		<li><%=link_to '会員一覧', admin_customers_path %></li>
		<li><%=link_to '注文履歴一覧', admin_root_path %></li>
		<li><%=link_to 'ジャンル一覧', admin_genres_path %></li>
		<li><%=link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
	</ul>
</div>
<div class="row" style="width:60%; margin:0 auto;">
<h4>会員一覧画面</h4>

<table class="table table-bordered">
	<tr>
		<th>顧客ID</th>
		<th>氏名</th>
		<th>フリガナ</th>
		<th>メールアドレス</th>
		<th>ステータス</th>
	</tr>
	<% @customers.each do |customer| %>
	<tr>
		<td><%= customer.id %></td>
		<td>
			<%= link_to admin_customer_path(customer) do %>
				<%= customer.last_name %> <%= customer.first_name %>
			<% end %>
		</td>
		<td><%= customer.last_name_kana %> <%= customer.first_name_kana %></td>
		<td><%= customer.email %></td>
		<% if customer.is_deleted == false %>
			<td><span class="badge" style="background:green">会員</span></td>
		<% else %>
			<td><span class="badge" style="background:red">退会済み</span></td>
		<% end %>
	</tr>
	<% end %>
</table>
</div>