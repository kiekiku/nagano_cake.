<div class="edit-container" style="width:50%; margin: 20px auto; position: relative;">
  <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">ユーザー情報編集</h4>

    <div class="row" style="height: 20px;"></div>
<%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
<div class="form-group">
    <label>姓</label>
    <%= f.text_field :last_name, class:"form-control", id:"InputLastName", autocomplete: "last_name", style: "margin;"  %>
    <label>名</label>
    <%= f.text_field :first_name, class:"form-control", id:"InputFirstName", autocomplete: "first_name" %>
  </div>

  <div class="form-group">
    <label>セイ</label>
    <%= f.text_field :last_name_kana, class:"form-control", id:"InputLastNameKana", autocomplete: "last_name_kana" %>
    <label>メイ</label>
    <%= f.text_field :first_name_kana, class:"form-control", id:"InputFirstNameKna", autocomplete: "first_name_kana" %>
  </div>

  <div class="form-group">
    <label>郵便番号</label>
    <%= f.text_field :postal_code, class:"form-control", id:"InputPostalCode", autocomplete: "postal_code" %>
  </div>

   <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, class:"form-control", id:"InputAddress", autofocus: true, autocomplete: "address", style: "width: 80%;" %>
  </div>

  <div class="form-group">
    <label>電話番号</label>
    <%= f.telephone_field :telephone_number, class:"form-control", id:"InputTelephoneNumber",  autocomplete: "telephone_number" %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, class:"form-control", id:"InputEmail", autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">会員ステータス</label>
    <%= f.select :is_active,{有効:true, 退会:false}%>
  </div>

  <hr>
  <div style="text-align:center;">
    <%= f.submit "変更を保存する", class:"btn btn-success", style: "display:inline-block" %>
  </div>
<% end %>

</div>