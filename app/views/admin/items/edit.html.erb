<div class="row" style= "width: 80%; margin: 20px auto;">
  <%= form_with model: @item, url:admin_item_path, method: :patch do |f| %>
    <div class="form-horizontal">
      <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">商品編集登録画面</h4>

      <div class="form-group">
        <label class="col-sm-2"></label>
        <div class="col-sm-10">
          <%= attachment_image_tag @item, :image, :fill, 400, 200,　fallback: "no_image.jpg", :align => "center"%>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">画像投稿</label>
        <div class="col-sm-10">
          <%= f.file_field :image  %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">商品名</label>
        <div class="col-sm-6">
          <%= f.text_field :name, class:"form-control", id:"InputName", autocomplete: "name" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">商品説明</label>
        <div class="col-sm-7">
          <%= f.text_area :introduction, class:"form-control", id:"InputIntroduction", autocomplete: "introduction", rows: 10 %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.where(is_disable: false), :id, :name %>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">税抜価格</label>
          <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">販売ステータス</label>
        <%= f.select :is_stopped,{販売中:false, 販売停止:true}%>
      </div>

      <div class="actions">
        <label class="col-sm-2 control-label"></label>
        <%= f.submit "登録する", class:"btn btn-primary btn-md" %>
      </div>
    </div>
  <% end %>
</div>
