<div class="box" style="margin: 0 auto; text-align: center;">
	<ul>
		<li><%=link_to '商品一覧', admin_items_path %></li>
		<li><%=link_to '会員一覧', admin_customers_path %></li>
		<li><%=link_to '注文履歴一覧', admin_root_path %></li>
		<li><%=link_to 'ジャンル一覧', admin_genres_path %></li>
		<li><%=link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
	</ul>
</div>
<div class="row" style= "width: 80%; margin: 20px auto;">
  <%= form_with model: @item, url:admin_items_path do |f| %>
    <div class="form-horizontal">
      <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">商品新規登録</h4>
      <div class="form-group">
        <label class="col-sm-2 control-label">商品画像</label>
        <div class="col-sm-3">
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">商品名</label>
        <div class="col-sm-6">
          <%= f.text_field :name, class:"form-control", id:"InputName", autocomplete: "name" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">商品説明</label>
        <div class="col-sm-7">
          <%= f.text_area :introduction, class:"form-control", id:"InputIntroduction", autocomplete: "introduction", rows: 10 %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">税抜価格</label>
          <div class="col-sm-2">
            <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
          </div>
      </div>



      <div class="actions">
        <label class="col-sm-2 control-label"></label>
          <%= f.submit "登録する", class:"btn btn-primary btn-md" %>
      </div>
    </div>
  <% end %>
</div>