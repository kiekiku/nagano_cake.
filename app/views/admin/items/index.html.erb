

<style>
 th {
 	background: #dad7d7;
 }
</style>



<div class="container" style="position:relative;">
<h2>商品一覧</h2>

<div style="position:absolute; top: 30px; right: 900px;">
	<%= link_to '新規登録', new_admin_item_path %>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.id %></td>
			<td>
				<% if item.image.attached? %>
					<%= image_tag item.image, size:"100x100" %>
				<% else %>
				  <%= image_tag 'no_image', size: "100x100" %>
				<% end %>
					<%= link_to admin_item_path(item.id) do %>
					<%= item.name %>
					<% end %>
			</td>
			<td><%= item.price %></td>
			<td><%= item.genre.name %></td>
			<td>
				<% if item.is_active? %>
					<span class="badge" style="background:#8BCE9A">販売中</span>
				<% else %>
					<span class="badge" style="background:#D52438">販売停止</span>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>