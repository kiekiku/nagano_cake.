<h3>商品詳細</h3>

<div class = "col-md-3">
    <!-- 商品画像 -->
      <%= attachment_image_tag @item, :item_image, format: 'jpeg', fallback: "no_image.jpg", size: "200x100" %>
</div>
    <div class = "col-md-6">
      <!-- 商品名 -->
      <%= @item.name %><br>
      <!-- 商品説明 -->
      <%= @item.description %><br>
      <!-- ジャンル-->
      <%= @item.genre %><br>
      <!-- 価格 -->
      <%= @item.tax_included.to_s(:delimited) %>円<br>
     
     
    </div>