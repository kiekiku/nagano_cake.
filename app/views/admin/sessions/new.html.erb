<div class="container">
  
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">管理者ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <label>メールアドレス</label>
    　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  　</div>

    <div class="form-group">
      <label>パスワード</label>
    　<%= f.password_field :password, autocomplete: "current-password" %>
  　</div>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-success", style:"display:block; margin: 0 auto;" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
