<style>
  .btn {
    width: 100px;
  }
  .change {
    display: none;
  }
  .show {
    display: inline-block;
  }
</style>

<div class="index-container" style="width:50%; margin: 20px auto;">

  <h3>ジャンル一覧・追加</h3>
  <%= form_with model: @genre, url:admin_genres_path do |f| %>
    <div class="form-group">
       <label for="genre">ジャンル名</label>
　　　　<%= f.text_field :name %>
        <%= f.submit '新規登録', class:"btn btn-success btn-info btn-md" %>
    </div>
  <% end %>

  <table class="table">
      <tr>ジャンル一覧</tr>

        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success" %></td>
        <% end %>
        </tbody>
      </tr>
  </table>

</div>